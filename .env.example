# AlloBricolage Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Option 1: Use PostgreSQL (Neon, Supabase, local PostgreSQL)
# DATABASE_URL=postgresql://user:password@host:5432/database

# Option 2: Use SQLite (local development - no setup needed)
# Leave DATABASE_URL empty or set USE_SQLITE=true
USE_SQLITE=true

# ============================================
# SESSION & SECURITY CONFIGURATION
# ============================================
# Secret key for session encryption (REQUIRED - must be strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-secret-key-here-change-in-production

# CSRF protection secret (REQUIRED for production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CSRF_SECRET=your-csrf-secret-key-here-change-in-production

# ============================================
# GOOGLE OAUTH CONFIGURATION
# ============================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# ============================================
# AI SERVICES (Optional - system works without them)
# ============================================
# OpenAI API Key for job analysis
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# Google Gemini API Key for match explanations
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# ============================================
# PAYMENT CONFIGURATION (Optional)
# ============================================
# Stripe (International cards)
# Get from: https://dashboard.stripe.com/apikeys
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# CMI (Moroccan cards - Centre Mon√©taire Interbancaire)
# CMI_MERCHANT_ID=your_cmi_merchant_id
# CMI_API_KEY=your_cmi_api_key
# CMI_ENDPOINT=https://payment.cmi.co.ma/fim/api

# Cash Plus (Moroccan payment service)
# CASHPLUS_MERCHANT_ID=your_cashplus_merchant_id
# CASHPLUS_API_KEY=your_cashplus_api_key

# ============================================
# GOOGLE MAPS CONFIGURATION
# ============================================
# Get from: https://console.cloud.google.com/google/maps-apis
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
NODE_ENV=development
BASE_URL=http://localhost:5000
